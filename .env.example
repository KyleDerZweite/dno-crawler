# DNO Crawler Environment Configuration
# Copy this to .env and fill in your values

# Database
POSTGRES_USER=dno
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_DB=dno_crawler
# Optional full connection string (example shown, avoid committing real secrets)
# DATABASE_URL=postgresql+asyncpg://dno:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0

# JWT (generate a secure secret for production!)
JWT_SECRET=dev-super-secret-jwt-key-change-in-production-32chars-minimum

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Zitadel Auth (authentication is handled by Zitadel)
ZITADEL_DOMAIN=auth.kylehub.dev

# Ollama LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=ministral-3:3b
OLLAMA_VISION_MODEL=qwen3-vl:8b

# SearXNG (optional, for web search)
SEARXNG_BASE_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
